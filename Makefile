CC = gcc
CFLAGS = -Werror -Wall -Wextra -g
RM = rm -f

LIBFT_SRCS = ./libft/*.c
LIBFT_OBJS = $(LIBFT_SRCS:.c=.o)

NAME = push_swap
SRCS = push_swap.c error.c operations_single.c operations_push.c operations_multi.c push_swap_utils.c push_swap_utils2.c push_swap_utils3.c small_algo.c big_algo.c
OBJS = $(SRCS:.c=.o)

LIBFT_SRCS_BONUS = ./bonus/libft/*.c
LIBFT_OBJS_BONUS = $(LIBFT_SRCS_BONUS:.c=.o)

NAME_BONUS = checker
SRCS_BONUS = bonus/checker_bonus.c bonus/error_bonus.c bonus/operations_single_bonus.c bonus/operations_push_bonus.c bonus/operations_multi_bonus.c bonus/push_swap_utils_bonus.c bonus/push_swap_utils2_bonus.c
OBJS_BONUS = $(SRCS_BONUS:.c=.o)

all: $(NAME)
	echo "Mandatory compilation done"

$(NAME): $(OBJS)
	make -C libft
	$(CC) $(CFLAGS) -o $(NAME) $(OBJS) $(LIBFT_OBJS)

clean:
	make clean -C libft
	cd bonus && make clean -C libft
	$(RM) $(OBJS) $(OBJS_BONUS)
	echo "Clean done"

fclean:	clean
	make fclean -C libft
	cd bonus && make fclean -C libft
	$(RM) $(NAME) $(NAME_BONUS)
	echo "Fclean done"

bonus: $(OBJS_BONUS)
	cd bonus && make -C libft
	$(CC) $(CFLAGS) -o $(NAME_BONUS) $(OBJS_BONUS) $(LIBFT_OBJS_BONUS)
	echo "Bonus compilation done"

re:	fclean all

noalgo:
	echo "	———————————No Algo?–––———————————"
	echo "	⣞⢽⢪⢣⢣⢣⢫⡺⡵⣝⡮⣗⢷⢽⢽⢽⣮⡷⡽⣜⣜⢮⢺⣜⢷⢽⢝⡽⣝"
